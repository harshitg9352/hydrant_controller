{
  "name": "hydrant-dashboard-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Frontend for Hydrant Inspection Dashboard",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier -w .",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "chart.js": "^4.5.1",
    "tailwindcss": "^4.1.18",
    "xlsx": "^0.18.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "htmlhint": "^1.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.51.0",
    "vite": "^5.3.1"
  },
  "lint-staged": {
    "**/*.html": [
      "htmlhint"
    ],
    "**/*.{css,ts}": [
      "prettier --check"
    ],
    "**/*": [
      "typos"
    ]
  }
}
